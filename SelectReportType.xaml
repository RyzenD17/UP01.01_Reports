<Window x:Class="UP01._01.SelectReportType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UP01._01"
        mc:Ignorable="d"
        Title="SelectReportType" Height="150" Width="400">
    <Grid HorizontalAlignment="Center">
        <StackPanel>
            <TextBlock HorizontalAlignment="Center">Выберите тип отчёта</TextBlock>
            <ComboBox Width="300" Height="30" Name="CBReportType"></ComboBox>
            <Button Margin="5" Width="80" Height="25" Click="Button_Click">ОК</Button>
        </StackPanel>
        
    </Grid>
</Window>
